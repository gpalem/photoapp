<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:id="@+id/ivCommentUserPhoto"
        android:src="@drawable/dp_launcher"
        android:scaleType="fitCenter"
        app:riv_corner_radius="30dip"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat"
        app:riv_oval="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvCommentUser"
        android:id="@+id/tvCommentUser"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivCommentUserPhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvComment"
        android:id="@+id/tvComment"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tvCommentUser"
        android:layout_toRightOf="@+id/ivCommentUserPhoto"
        android:layout_toEndOf="@+id/ivCommentUserPhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvCommentTimeSpan"
        android:id="@+id/tvCommentTimeSpan"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/tvCommentUser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>